<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_row_video"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="cse.hcmut.edu.vn.tripmaster.ui.activity.Videos.RowVideo">

    <ImageView
        android:layout_height="80dp"
        app:srcCompat="@drawable/ic_media_play"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/imageViewVideo"
        android:layout_width="120dp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:id="@+id/textViewNameVideo"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imageViewVideo"
        android:layout_toEndOf="@+id/imageViewVideo" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:id="@+id/textViewNameUser"
        android:layout_below="@+id/textViewNameVideo"
        android:layout_alignLeft="@+id/textViewNameVideo"
        android:layout_alignStart="@+id/textViewNameVideo" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewTimeSubmit"
        android:layout_alignBottom="@+id/imageViewVideo"
        android:layout_alignLeft="@+id/textViewNameUser"
        android:layout_alignStart="@+id/textViewNameUser" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewCountView"
        android:layout_alignBaseline="@+id/textView"
        android:layout_alignBottom="@+id/textView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Lượt xem: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_alignBaseline="@+id/textViewTimeSubmit"
        android:layout_alignBottom="@+id/textViewTimeSubmit"
        android:layout_toLeftOf="@+id/textViewCountView"
        android:layout_toStartOf="@+id/textViewCountView" />

</RelativeLayout>
