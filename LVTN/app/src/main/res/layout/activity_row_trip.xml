<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_row_trip"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    tools:context=".ui.activity.RowTrip">


    <ImageView
        app:srcCompat="@drawable/map_finish"
        android:id="@+id/imageViewAddrFinish"
        android:layout_below="@+id/imageViewAddrStart"
        android:layout_marginTop="10dp"
        android:layout_alignRight="@+id/imageViewAddrStart"
        android:layout_alignEnd="@+id/imageViewAddrStart"
        android:layout_width="30dp"
        android:layout_height="30dp" />

    <TextView
        android:text="addrFinish"
        android:layout_height="20dp"
        android:id="@+id/textViewaddrFinish"
        android:layout_alignBottom="@+id/imageViewAddrFinish"
        android:layout_alignLeft="@+id/textViewaddrStart"
        android:layout_alignStart="@+id/textViewaddrStart"
        android:layout_width="200dp" />

    <View
        android:layout_width="300dp"
        android:layout_height="1dp"
        android:layout_below="@+id/imageViewAddrFinish"
        android:layout_marginTop="40dp"
        android:id="@+id/line"
        android:layout_centerHorizontal="true"
        android:background="#9C9C9C" />

    <TextView
        android:text="nameUser"
        android:layout_height="20dp"
        android:id="@+id/textViewNameUser"
        android:layout_alignTop="@+id/imageViewNameUser"
        android:layout_toRightOf="@+id/imageViewNameUser"
        android:layout_toEndOf="@+id/imageViewNameUser"
        android:layout_marginTop="30dp"
        android:layout_width="300dp" />

    <ImageView
        app:srcCompat="@drawable/calendar_start"
        android:id="@+id/imageViewTimeStart"
        android:layout_below="@+id/imageViewNameUser"
        android:layout_alignRight="@+id/imageViewNameUser"
        android:layout_alignEnd="@+id/imageViewNameUser"
        android:layout_marginRight="18dp"
        android:layout_marginEnd="18dp"
        android:layout_width="30dp"
        android:layout_height="30dp" />

    <ImageView
        app:srcCompat="@drawable/map_start"
        android:id="@+id/imageViewAddrStart"
        android:layout_below="@+id/imageViewTimeStart"
        android:layout_alignLeft="@+id/imageViewTimeStart"
        android:layout_alignStart="@+id/imageViewTimeStart"
        android:layout_marginTop="11dp"
        android:layout_width="30dp"
        android:layout_height="30dp" />

    <TextView
        android:text="addrStart"
        android:layout_height="20dp"
        android:id="@+id/textViewaddrStart"
        android:layout_width="200dp"
        android:layout_alignBottom="@+id/imageViewAddrStart"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="timeStart"
        android:layout_height="20dp"
        android:id="@+id/textViewtimeStart"
        android:layout_alignBottom="@+id/imageViewTimeStart"
        android:layout_alignLeft="@+id/textViewaddrStart"
        android:layout_alignStart="@+id/textViewaddrStart"
        android:layout_width="150dp" />

    <ImageView
        app:srcCompat="@drawable/ic_person_black_24dp"
        android:id="@+id/imageViewNameUser"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/textViewtimeStart"
        android:layout_toStartOf="@+id/textViewtimeStart" />

    <TextView
        android:text="timeFinish"
        android:layout_height="20dp"
        android:id="@+id/textViewtimeFinish"
        android:layout_width="130dp"
        android:layout_alignBaseline="@+id/textViewtimeStart"
        android:layout_alignBottom="@+id/textViewtimeStart"
        android:layout_toRightOf="@+id/textViewtimeStart"
        android:layout_toEndOf="@+id/textViewtimeStart" />

    <Button
        android:text="Comment"
        android:layout_height="40dp"
        android:drawableLeft="@drawable/ic_mode_comment_black_24dp"
        android:textSize="10sp"
        android:id="@+id/buttonComment"
        android:layout_below="@+id/line"
        android:layout_toRightOf="@+id/buttonLike"
        android:layout_toEndOf="@+id/buttonLike"
        android:layout_width="120dp" />

    <Button
        android:text="Like"
        android:layout_height="40dp"
        android:id="@+id/buttonLike"
        android:drawableLeft="@drawable/ic_thumb_up_black_24dp"
        android:textSize="10sp"
        android:layout_below="@+id/line"
        android:layout_alignLeft="@+id/imageViewAddrFinish"
        android:layout_alignStart="@+id/imageViewAddrFinish"
        android:layout_width="90dp" />

    <Button
        android:text="View"
        android:layout_height="40dp"
        android:drawableLeft="@drawable/ic_remove_red_eye_black_24dp"
        android:textSize="10sp"
        android:id="@+id/buttonView"
        android:layout_below="@+id/line"
        android:layout_toRightOf="@+id/buttonComment"
        android:layout_toEndOf="@+id/buttonComment"
        android:layout_width="90dp" />

</RelativeLayout>
